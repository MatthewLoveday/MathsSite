<div class="row">
    <div class="container">
        <div class="row">
            <canvas id="examChart"></canvas>
        </div>
        <div class="row">
            <div class="col s12 m4">
                <div class="card-panel white">
                    <h5>Time spent</h5>

                    <% var timeSpent = 0; %>
                    <% for(var i = 0; i < user.examBoard.modules.length; i++) { %>
                        <% for(var t = 0; t < user.examBoard.modules[i].topics.length; t++) { %>
                            <% timeSpent += user.examBoard.modules[i].topics[t].time; %>
                        <% } %>
                    <% } %>
                    <h3><%= Math.floor(timeSpent/3600) %>h <%= Math.floor((timeSpent % 3600)/60) %>m <%= Math.floor((timeSpent % 60)) %>s</h3>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="card-panel white">
                    <h5>Current score</h5>
                    <h3><%= user.examBoard.results[user.examBoard.results.length - 1].score %></h3>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="card-panel white">
                    <h5>Standard Deviation</h5>
                    <h3 id="std"></h3>
                </div>
            </div>
            
        </div>
    </div>
</div>
    


<script>

    function stdDev(values) {
        var avg = average(values);
        var squareDiffs = values.map((value) => {
            return (value - avg) * (value - avg);
        });
        return Math.round(Math.sqrt(average(squareDiffs))*1000)/1000;
    }
    function average(data) {
        var sum = data.reduce((sum, value) => {
            return sum + value;
        }, 0);
        return sum / data.length;
    }
    $("#std").html(stdDev([<%= user.examBoard.results.map((result) => { return result.score }) %>]));

    var examChart = document.getElementById("examChart").getContext("2d");
    var examLineChart = new Chart(examChart, {
        type: "line",
        data: {
            labels: [
                <% for(var i = 0; i< user.examBoard.results.length; i++){ %>
                    new Date("<%= user.examBoard.results[i].date.getFullYear() %>-<%= user.examBoard.results[i].date.getMonth() + 1 %>-<%= user.examBoard.results[i].date.getDate() %> <%= user.examBoard.results[i].date.getHours() %>:<%= user.examBoard.results[i].date.getMinutes() %>").toLocaleString() <% if(i < user.examBoard.results.length - 1) { %>,<% } %>
                <% } %>
            ],
            datasets: [{
                label: "Examboard progress",
                data: [
                    <% for(var i = 0; i< user.examBoard.results.length; i++){ %>
                        { t: new Date("<%= user.examBoard.results[i].date.getFullYear() %>-<%= user.examBoard.results[i].date.getMonth() + 1 %>-<%= user.examBoard.results[i].date.getDate() %> <%= user.examBoard.results[i].date.getHours() %>:<%= user.examBoard.results[i].date.getMinutes() %> %>"), y: <%= user.examBoard.results[i].score %>}<% if(i < user.examBoard.results.length - 1) { %>,<% } %>
                    <% } %>
                ],
                borderWidth: 1
            }]
        }
    });
</script>

